<%= form_for @search do |f| %>
  <div>
    <%= f.label :address, "Enter an address" %>
    <br />
    <%= f.text_area :address, class: 'form-control', cols: '40', rows: '3' %>
  </div>

  <br />

  <div>
    <%= f.label :type, "Select Type" %>
    <br />
    <%= f.text_field :type, class: 'form-control' %>
  </div>

  <br />

  <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
    Search
  <% end %>

<% end %>

<br />
